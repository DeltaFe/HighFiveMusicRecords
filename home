      <section>
        <h2>Latest Instagram Posts</h2>
        <div>
          <!-- Replace "YOUR_INSTAGRAM_ACCESS_TOKEN" with your actual Instagram access token -->
          <script type="text/javascript">
            const accessToken = 'YOUR_INSTAGRAM_ACCESS_TOKEN';
            fetch(`https://graph.instagram.com/me/media?fields=id,caption,media_type,media_url,thumbnail_url,permalink&access_token=${accessToken}`)
              .then(response => response.json())
              .then(data => {
                const posts = data.data.slice(0, 3);
                posts.forEach(post => {
                  const div = document.createElement('div');
                  const a = document.createElement('a');
                  const img = document.createElement('img');
                  const p = document.createElement('p');
                  a.href = post.permalink;
                  a.target = '_blank';
                  img.src = post.media_url;
                  img.alt = post.caption;
                  p.textContent = post.caption;
                  a.appendChild(img);
                  div.appendChild(a);
                  div.appendChild(p);
                  document.querySelector('#instagram-posts').appendChild(div);
                });
              });
          </script>
          <div id="instagram-posts"></div>
        </div>
      </section>
